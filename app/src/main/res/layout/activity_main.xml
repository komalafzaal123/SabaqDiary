<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#018A7D">

    <TextView
        android:id="@+id/TotalQuestions"
        android:layout_width="350dp"
        android:layout_height="56dp"
       android:text="Sabaq Diary"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.059" />

    <EditText
        android:id="@+id/Student_Name"
        android:layout_width="253dp"
        android:layout_height="49dp"
        android:layout_marginTop="172dp"
        android:hint="Enter Student Name"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.189"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/Sabaq_Para"
        android:layout_width="253dp"
        android:layout_height="49dp"
        android:layout_marginTop="28dp"
        android:hint="Sabaq Para"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.196"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Student_Name" />

    <EditText
        android:id="@+id/Manzil_Para"
        android:layout_width="253dp"
        android:layout_height="49dp"
        android:layout_marginTop="76dp"
        android:hint="Manzil Para"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.189"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sabaqii_Para" />

    <EditText
        android:id="@+id/sabaqii_Para"
        android:layout_width="253dp"
        android:layout_height="49dp"
        android:layout_marginTop="80dp"
        android:hint="Sabaqii Para"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.189"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Sabaq_Para" />

    <RadioGroup
        android:id="@+id/radioGroupSabaq"
        android:layout_width="190dp"
        android:layout_height="62dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.927"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Sabaq_Para">

        <RadioButton
            android:id="@+id/sabaqYes"
            android:layout_width="65dp"
            android:layout_height="46dp"
            android:layout_marginTop="20dp"
            android:hint="Yes"
            android:textColorHint="@color/black"
            app:layout_constraintEnd_toStartOf="@+id/sabaqNo"
            app:layout_constraintHorizontal_bias="0.926"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Sabaq_Para" />

        <RadioButton
            android:id="@+id/sabaqNo"
            android:layout_width="65dp"
            android:layout_height="46dp"
            android:layout_marginTop="20dp"
            android:hint="No"
            android:textColorHint="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/sabaqYes" />

    </RadioGroup>


    <RadioGroup
        android:id="@+id/radioGroupSabqi"
        android:layout_width="190dp"
        android:layout_height="62dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.927"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sabaqii_Para">

        <RadioButton
            android:id="@+id/sabaqiiYes"
            android:layout_width="65dp"
            android:layout_height="46dp"
            android:layout_marginTop="20dp"
            android:hint="Yes"
            android:textColorHint="@color/black"
            app:layout_constraintEnd_toStartOf="@+id/sabaqNo"
            app:layout_constraintHorizontal_bias="0.926"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Sabaq_Para" />

        <RadioButton
            android:id="@+id/sabaqiiNo"
            android:layout_width="65dp"
            android:layout_height="46dp"
            android:layout_marginTop="20dp"
            android:hint="No"
            android:textColorHint="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/sabaqYes" />

    </RadioGroup>

    <RadioGroup
        android:id="@+id/radioGroupManzil"
        android:layout_width="190dp"
        android:layout_height="62dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.927"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Manzil_Para">

        <RadioButton
            android:id="@+id/ManzilYes"
            android:layout_width="65dp"
            android:layout_height="46dp"
            android:layout_marginTop="20dp"
            android:hint="Yes"
            android:textColorHint="@color/black"
            app:layout_constraintEnd_toStartOf="@+id/sabaqNo"
            app:layout_constraintHorizontal_bias="0.926"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Sabaq_Para" />

        <RadioButton
            android:id="@+id/ManzilNo"
            android:layout_width="65dp"
            android:layout_height="46dp"
            android:layout_marginTop="20dp"
            android:hint="No"
            android:textColorHint="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/sabaqYes" />

    </RadioGroup>

    <Button
        android:id="@+id/Save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginBottom="36dp"
        android:text="Save"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/Commits"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginEnd="44dp"
        android:text="Commit"
        app:layout_constraintBottom_toBottomOf="@+id/show"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/show" />

    <Button
        android:id="@+id/show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show"
        app:layout_constraintBottom_toBottomOf="@+id/Save"
        app:layout_constraintEnd_toStartOf="@+id/Commits"
        app:layout_constraintStart_toEndOf="@+id/Save"
        app:layout_constraintTop_toTopOf="@+id/Save" />

</androidx.constraintlayout.widget.ConstraintLayout>
